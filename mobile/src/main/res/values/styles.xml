<resources>

    <style name="Theme.Maize" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Widget.Maize.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.Maize.ActionBar" parent="android:Widget.DeviceDefault.Light.ActionBar.Solid">
        <item name="android:background">@color/green</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Maize.ActionBar.Title</item>
    </style>

    <style name="TextAppearance.Maize.ActionBar.Title" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ColorBlock">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActionbarButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/actionbar_button_text</item>
        <item name="android:background">@drawable/item_background</item>
    </style>

</resources>
